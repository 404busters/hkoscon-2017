{% extends "app.jinja" %}

{% block content %}
    <div class="container">
        <h3>Staff</h3>
        {% for team in data.staff.teams %}
            <div class="staff-team">
                <h4>{{ team.name }}</h4>
                <div>
                    {% for member in team.members %}
                        <div class="staff">
                            <div data-name="{{ member.name | replace('.', '') }}" data-team="{{ team.name }}" data-role="staff"></div>
                            <div>
                                {{ member.name }}
                                {% if member.teamlead %} * {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <small>*Team Lead</small>
    </div>
{% endblock %}

{% block script %}
    <script src="{{ data.site.basePath }}/staff.js" defer async></script>
{% endblock %}
